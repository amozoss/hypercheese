{{#if showVideo}}
  <video class={{imageClass}} style={{imageStyle}} poster={{squareImage}} preload="none" controls="controls">
    <source type="video/mp4" src={{videoStream}} />
  </video>
{{else}}
  <img class={{imageClass}} style={{imageStyle}} src={{squareImage}} />
{{/if}}
{{#if item.hasComments}}
  <img class="comments" src="/images/comment.png"/>
{{/if}}
<div class="mini-tag-icons">
  {{#each item.tags as |tag|}}<
    img src={{tag.iconUrl}}
  />{{/each}}
</div>

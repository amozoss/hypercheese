.event-list
  - @by_event.each do |event,items|
    %h3
      = event.name || event.subtitle
      %span.subtitle= event.name && event.subtitle
    .event-line
      - items = items.sample 12
      - big = items.sample 4
      - small = items - big
      - small_lines = [small[0..3], small[4..7]]

      - big.each do |item|
        = image_tag item.resized_url( 'square' )

      .small-images
        - small_lines.each do |line|
          - line ||= []
          .small-images-line
            - line.each do |item|
              = image_tag item.resized_url( 'square' )
    .clearfix
